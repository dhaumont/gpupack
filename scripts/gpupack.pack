#!/bin/bash

function ecSDK_clone ()
{
  pack=$1
  mkdir -p $pack/hub/local/src/ecSDK
  cd $pack/hub/local/src/ecSDK
  git clone --branch 3.7.0  git@github.com:ecmwf/ecbuild.git
  git clone --branch 1.19.0 git@github.com:ACCORD-NWP/eckit.git
  git clone --branch 0.9.5  git@github.com:ecmwf/fckit.git
}

